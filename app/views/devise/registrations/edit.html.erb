<div class="card">
  <div class="card-header">
    <h4>Редагувати профіль</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Пароль" %> <i>(залишіть пустим якщо не бажаєте змінювати)</i><br />
        <%= f.password_field :password, class: "form-control", placeholder: "Новий пароль", autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, "Підтвердження нового паролю" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Новий пароль", autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password, "Поточний пароль" %> <i>(Ваш поточний пароль щоб підтвердити зміни)</i><br />
        <%= f.password_field :current_password, class: "form-control", placeholder: "Поточний пароль", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Редагувати", class:"btn btn-secondary" %>
      </div>
    <% end %>
    <br/>
    <%= link_to "Назад", :back %>
  </div>
</div>
