<p style="color: green"><%= notice %></p>
<div id="expenses">
  <p>Загальна сума: <%= @total_sum %></p>
  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont %>
    <%= f.search_field :name_cont %>
    <%= f.submit %>
  <% end %>
  <% @expenses.each do |expense| %>
    <%= render expense %>
    <p><%= link_to "Show this expense", expense %></p>
  <% end %>
</div>

<%= link_to "New expense", new_expense_path %>
